@using Models
@model  LoginViewModel
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "_Layout";
}
<form id="loginForm" method="post" action="@Url.Action("Login","Account")">
    <div class="content">
        <div class="row">
            @Html.Label("Email")
            @Html.TextBoxFor(_ => _.Email, new{@required= "required", @class="form-control" })
            @Html.ValidationMessageFor(_ => _.Email)
        </div>
        <div class="row">
            @Html.Label("Password")
            @Html.TextBoxFor(_ => _.Password, new { @required = "required", @class = "form-control" })
            @Html.ValidationMessageFor(_ => _.Password)
        </div>
        <button class="btn btn-default" type="submit">Login</button>
    </div>
</form>
